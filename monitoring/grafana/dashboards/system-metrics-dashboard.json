{
    "dashboard": {
      "id": null,
      "title": "Spring Boot - Water Monitoring",
      "tags": ["spring-boot", "water-monitoring"],
      "timezone": "browser",
      "panels": [
        {
          "id": 1,
          "title": "CPU Usage",
          "type": "timeseries",
          "targets": [
            {
              "expr": "system_cpu_usage{job=\"water-monitoring-backend\"}",
              "legendFormat": "CPU Usage"
            }
          ],
          "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
        },
        {
          "id": 2,
          "title": "Memory Usage",
          "type": "timeseries", 
          "targets": [
            {
              "expr": "jvm_memory_used_bytes{job=\"water-monitoring-backend\"}",
              "legendFormat": "{{area}} Memory"
            }
          ],
          "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
        }
      ],
      "time": {"from": "now-1h", "to": "now"},
      "refresh": "30s"
    }
  }